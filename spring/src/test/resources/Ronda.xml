<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ronda="http://www.ronda.com/schema/ronda"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.ronda.com/schema/ronda http://www.ronda.com/schema/ronda/ronda.xsd">

    <ronda:registry id="firstRegistry" protocol="ronda" port="2800" address="127.0.0.1" />
    
    <ronda:provider interface="cn.panda.ronda.spring.service.HelloService" registry="firstRegistry" protocol="ronda" ref="helloService" />

    <ronda:consumer id="firstConsumer" interface="cn.panda.ronda.spring.service.HelloService" registry="firstRegistry"
                    protocol="ronda" retries="3" timeout="5" />
</beans>